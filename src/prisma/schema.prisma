generator client {
  provider = "prisma-client-js"
}

datasource DB {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id Int @id @default(autoincrement())

  name     String
  surname  String
  email    String
  password String

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  name  String
  image String

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}
